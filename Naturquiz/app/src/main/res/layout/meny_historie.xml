<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/historie_bakgrunn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bla"
        tools:context=".Menu_historie">

        <TextView
            android:id="@+id/historie_tittel"
            style="@style/title"
            android:text="@string/mine_poeng"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:id="@+id/historie_level_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/historie_tittel">

            <ImageView
                android:id="@+id/historie_level_forrige"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bakgrunn_venstre"
                android:src="@drawable/pil_tilbake"
                android:fontFamily="@font/aclonica"
                android:contentDescription="@string/forrige" />

            <TextView
                android:id="@+id/historie_level"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:fontFamily="@font/aclonica"
                android:textColor="@color/hvit"
                android:background="@drawable/bakgrunn_midt"
                android:gravity="center"
                android:text="@string/level"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/historie_level_neste"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bakgrunn_hoyre"
                android:src="@drawable/pil_neste"
                android:fontFamily="@font/aclonica"
                android:textSize="20sp"
                android:contentDescription="@string/neste" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/historie_sorter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/historie_level_ll"
            android:orientation="horizontal">

            <Button
                android:id="@+id/historie_sorter_poeng"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/hvit"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="@color/bla_mork"
                android:drawableEnd="@drawable/pil_ned"
                android:layout_gravity="center_vertical|start"
                android:text="@string/poeng"
                style="?android:attr/buttonBarButtonStyle" />

            <Button
                android:id="@+id/historie_sorter_dato"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@color/hvit"
                android:layout_marginHorizontal="6dp"
                android:backgroundTint="@color/bla_mork"
                android:drawableEnd="@drawable/pil_ned"
                android:layout_gravity="center_vertical|end"
                android:text="@string/dato"
                style="?android:attr/buttonBarButtonStyle" />

        </LinearLayout>

        <ListView
            android:id="@+id/historie_liste"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false"
            android:dividerHeight="1dp"
            app:layout_constraintTop_toBottomOf="@+id/historie_sorter"
            app:layout_constraintBottom_toTopOf="@id/historie_typer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            android:cacheColorHint="@color/bla_mork"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="6dp"/>

        <com.appodeal.ads.BannerView
            android:id="@+id/historie_reklame"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            android:background="@drawable/gradient_bla_blank"
            app:layout_constraintBottom_toTopOf="@+id/historie_typer"
            />

        <!-- Typene helt nederst -->
        <LinearLayout
            android:id="@+id/historie_typer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/historie_fugl"
                android:background="@color/bla_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/fugl"
                android:contentDescription="@string/fugler" />

            <ImageView
                android:id="@+id/historie_plante"
                android:background="@color/gronn_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:src="@drawable/blomst"
                android:contentDescription="@string/planter" />

            <ImageView
                android:id="@+id/historie_sopp"
                android:background="@color/lilla_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/sopp"
                android:contentDescription="@string/sopp" />

            <ImageView
                android:id="@+id/historie_insekt"
                android:background="@color/rod_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/insekt_sommerfugl"
                android:contentDescription="@string/insekt" />

            <ImageView
                android:id="@+id/historie_dyr"
                android:background="@color/brun_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="6dp"
                android:src="@drawable/dyr_ekorn"
                android:contentDescription="@string/ekorn" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>