<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/start_bakgrunn"
        android:background="@drawable/gradient_bla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Start">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/start_reklame">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/start_tittel"
                    style="@style/title"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/aclonica"
                    android:text="@string/gjett_og_lar"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/start_spm1"
                    app:cornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/bilde_fugl"
                    app:layout_constraintTop_toBottomOf="@+id/start_tittel"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/start_spm2"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:contentDescription="@string/alternativ_nr1" />

                <ImageView
                    android:id="@+id/start_spm2"
                    app:cornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/lyd"
                    app:layout_constraintTop_toBottomOf="@+id/start_tittel"
                    app:layout_constraintStart_toEndOf="@id/start_spm1"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:contentDescription="@string/alternativ_nr2" />

                <ImageView
                    android:id="@+id/start_spm3"
                    app:cornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/fugl_vingespenn"
                    app:layout_constraintTop_toBottomOf="@+id/start_spm1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/start_spm4"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:contentDescription="@string/alternativ_nr3" />

                <ImageView
                    android:id="@+id/start_spm4"
                    app:cornerRadius="10dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/vekt_bla"
                    app:layout_constraintTop_toBottomOf="@+id/start_spm1"
                    app:layout_constraintStart_toEndOf="@id/start_spm3"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="150dp"
                    android:layout_width="150dp"
                    android:contentDescription="@string/alternativ_nr4" />

                <Button
                    android:id="@+id/start_logg_inn"
                    android:textColor="@color/bla_mork"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:text="@string/logg_inn"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/start_spm3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center" />

                <Button
                    android:id="@+id/start_oppgrader"
                    android:textColor="@color/bla_mork"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:text="@string/oppgrader"
                    android:background="@color/blank"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/start_logg_inn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <ImageView
            android:id="@+id/start_hjelp_finger"
            android:visibility="invisible"
            app:srcCompat="@drawable/hjelp_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:elevation="10dp"
            android:contentDescription="@string/help" />

        <TextView
            android:id="@+id/start_hjelp_tekst"
            android:visibility="invisible"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/start_hjelp_finger"
            app:layout_constraintStart_toStartOf="@+id/start_hjelp_finger"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/hvit"
            android:padding="10dp"
            android:elevation="2dp"
            android:textColor="@color/bla_mork"/>

        <com.appodeal.ads.BannerView
            android:id="@+id/start_reklame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            app:layout_constraintBottom_toTopOf="@id/start_typer"
            />

        <!-- Typene helt nederst -->
        <LinearLayout
            android:id="@+id/start_typer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/start_fugl"
                android:background="@color/bla_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/fugl"
                android:contentDescription="@string/fugler" />

            <ImageView
                android:id="@+id/start_plante"
                android:background="@color/gronn_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="3dp"
                android:src="@drawable/blomst"
                android:contentDescription="@string/planter" />

            <ImageView
                android:id="@+id/start_sopp"
                android:background="@color/lilla_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/sopp"
                android:contentDescription="@string/sopp" />

            <ImageView
                android:id="@+id/start_insekt"
                android:background="@color/rod_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:src="@drawable/insekt_sommerfugl"
                android:contentDescription="@string/insekt" />

            <ImageView
                android:id="@+id/start_dyr"
                android:background="@color/brun_lys"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:padding="6dp"
                android:src="@drawable/dyr_ekorn"
                android:contentDescription="@string/ekorn" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
