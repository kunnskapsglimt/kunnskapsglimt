<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profil_bakgrunn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_bla"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        tools:context="com.kunnskapsgnist.boardgamebattle.Menu_profil">

        <TextView
            android:id="@+id/profil_tittel"
            style="@style/title"
            android:text="@string/min_profil"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profil_vent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/profil_tittel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="10dp"
            android:background="@drawable/gradient_bla"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/profil_vent_type"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/fugl"
                android:contentDescription="@string/fugler" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profil_bytt_brukernavn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bla"
            android:visibility="gone"
            android:elevation="5dp">

            <AutoCompleteTextView
                android:id="@+id/profil_nytt_brukernavn"
                android:layout_marginTop="10dp"
                android:hint="@string/nytt_brukernavn_hint"
                android:inputType="textPersonName"
                android:textColor="@color/hvit"
                android:textColorHint="@color/bla"
                android:backgroundTint="@color/bla"
                android:maxLines="1"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/profil_bytt_brukernavn_knapp"
                android:text="@string/bytt_brukernavn"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                app:layout_constraintTop_toBottomOf="@+id/profil_nytt_brukernavn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                style="@style/button" />

            <ImageView
                android:id="@+id/profil_bytt_brukernavn_avbryt"
                android:src="@drawable/symbol_avslutt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:contentDescription="@string/avbryt" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/profil_ikke_logget_inn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            android:background="@drawable/gradient_bla"
            android:gravity="center"
            android:paddingBottom="100dp"
            android:elevation="10dp">

            <Button
                android:id="@+id/profil_login_button"
                android:text="@string/logg_inn"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                android:layout_marginTop="20dp"
                style="@style/button" />

            <TextView
                android:text="@string/eller"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@color/bla_mork"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/profil_opprett_bruker"
                android:text="@string/opprett_bruker"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                android:layout_marginTop="20dp"
                style="@style/button" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/profil_boks"
            app:cardBackgroundColor="@color/bla_mork"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/profil_tittel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/profil_brukernavn"
                    android:layout_margin="0dp"
                    style="@style/tekst"
                    android:textColor="@color/hvit"
                    android:textSize="30sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/profil_epost"
                    style="@style/tekst"
                    android:textColor="@color/hvit"
                    android:layout_margin="0dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/profil_endre_brukernavn"
            android:textColor="@color/bla_mork"
            android:textSize="17sp"
            android:minHeight="48dp"
            android:layout_marginTop="50dp"
            android:text="@string/bytt_brukernavn"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/profil_boks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profil_glemt_passord"
            android:textColor="@color/bla_mork"
            android:textSize="17sp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/glemt_passord"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/profil_endre_brukernavn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/profil_logg_ut"
            android:textColor="@color/bla_mork"
            android:textSize="17sp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:text="@string/logg_ut"
            android:background="@android:color/transparent"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/profil_glemt_passord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toBottomOf="@+id/profil_logg_ut"
            app:layout_constraintBottom_toTopOf="@+id/profil_reklame"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/fugl"
            android:foregroundGravity="center"
            android:contentDescription="@string/dekorasjon" />

        <com.appodeal.ads.BannerView
            android:id="@+id/profil_reklame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:elevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>