<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:background="@drawable/gradient_bla"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:elevation="1dp"
            tools:context="com.kunnskapsgnist.boardgamebattle.Menu_create_account">

            <TextView
                android:id="@+id/opprett_tittel"
                style="@style/title"
                android:text="@string/opprett_bruker"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="16dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/opprett_vent"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:elevation="10dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/opprett_tittel"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/gradient_bla"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/opprett_vent_type"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/fugl"
                    android:contentDescription="@string/fugler" />

                <ProgressBar
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/opprett_suksess"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@drawable/gradient_bla"
                android:gravity="center"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/opprett_login_knapp"
                android:paddingBottom="200dp"
                android:elevation="12dp">

                <TextView
                    style="@style/title"
                    android:text="@string/du_har_opprettet_din_bruker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/opprett_suksess_fortsett"
                    android:text="@string/fortsett"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="10dp"
                    android:layout_marginTop="30dp"
                    style="@style/button" />

            </LinearLayout>

            <AutoCompleteTextView
                android:id="@+id/opprett_brukernavn"
                android:textSize="21sp"
                android:layout_marginTop="10dp"
                android:hint="@string/nytt_brukernavn_hint"
                android:inputType="textPersonName"
                android:textColor="@color/bla_mork"
                android:textColorHint="@color/bla"
                android:backgroundTint="@color/bla"
                app:layout_constraintTop_toBottomOf="@+id/opprett_tittel"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <AutoCompleteTextView
                android:id="@+id/opprett_epost"
                android:textSize="21sp"
                android:layout_marginTop="15dp"
                android:hint="@string/epost_hint"
                android:inputType="textEmailAddress"
                android:textColor="@color/bla_mork"
                android:textColorHint="@color/bla"
                android:backgroundTint="@color/bla"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/opprett_brukernavn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:id="@+id/opprett_passord"
                android:textSize="21sp"
                android:hint="@string/passord"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:textColor="@color/bla_mork"
                android:textColorHint="@color/bla"
                android:backgroundTint="@color/bla"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/opprett_epost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password" />

            <EditText
                android:id="@+id/opprett_passord2"
                android:textSize="21sp"
                android:hint="@string/gjenta_passord"
                android:inputType="textPassword"
                android:layout_marginTop="15dp"
                android:textColor="@color/bla_mork"
                android:textColorHint="@color/bla"
                android:backgroundTint="@color/bla"
                android:maxLines="1"
                app:layout_constraintTop_toBottomOf="@+id/opprett_passord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="password" />

            <Button
                android:id="@+id/opprett_knapp"
                android:text="@string/opprett_bruker"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/opprett_passord2"
                style="@style/button" />

            <TextView
                android:id="@+id/opprett_eller"
                android:text="@string/eller"
                android:layout_marginTop="20dp"
                android:textSize="18sp"
                android:textColor="@color/bla_mork"
                android:gravity="center_horizontal"
                app:layout_constraintTop_toBottomOf="@+id/opprett_knapp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/opprett_login_knapp"
                android:text="@string/logg_inn"
                android:textSize="21sp"
                android:minHeight="48dp"
                android:textColor="@color/bla_mork"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:paddingVertical="6dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@+id/opprett_eller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>


