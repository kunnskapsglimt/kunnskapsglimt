<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/gradient_bla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.kunnskapsgnist.boardgamebattle.Menu_login"
        android:elevation="1dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/login_vent"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="10dp"
            android:background="@drawable/gradient_bla"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/login_vent_type"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/fugl"
                android:contentDescription="@string/fugler" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/login_suksess"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/gradient_bla"
            android:gravity="center"
            android:paddingBottom="200dp"
            android:elevation="12dp">

            <TextView
                style="@style/title"
                android:text="@string/du_har_logget_inn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/login_suksess_fortsett"
                android:text="@string/fortsett"
                android:layout_gravity="center_horizontal"
                app:cornerRadius="10dp"
                android:layout_marginTop="30dp"
                style="@style/button" />

        </LinearLayout>

        <ScrollView
            android:background="@drawable/gradient_bla"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/login_title"
                    style="@style/title"
                    android:text="@string/logg_inn"
                    android:layout_marginBottom="16dp"/>

                <AutoCompleteTextView
                    android:id="@+id/login_email"
                    android:textSize="21sp"
                    android:layout_marginTop="15dp"
                    android:hint="@string/epost_hint"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/bla_mork"
                    android:textColorHint="@color/bla"
                    android:backgroundTint="@color/bla"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>

                <EditText
                    android:id="@+id/login_passord"
                    android:hint="@string/passord"
                    android:textSize="21sp"
                    android:inputType="textPassword"
                    android:layout_marginTop="15dp"
                    android:textColor="@color/bla_mork"
                    android:textColorHint="@color/bla"
                    android:backgroundTint="@color/bla"
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="password" />

                <Button
                    android:id="@+id/login_knapp"
                    android:text="@string/logg_inn"
                    android:layout_gravity="center_horizontal"
                    app:cornerRadius="10dp"
                    android:layout_marginTop="30dp"
                    style="@style/button" />

                <TextView
                    android:text="@string/eller"
                    android:layout_marginTop="30dp"
                    android:textSize="18sp"
                    android:textColor="@color/bla_mork"
                    android:gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/login_glemt_knapp"
                    android:textColor="@color/bla_mork"
                    android:layout_marginTop="16dp"
                    android:textSize="21sp"
                    android:height="48dp"
                    android:text="@string/glemt_passord"
                    android:paddingVertical="6dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/login_lag_bruker"
                    android:textColor="@color/bla_mork"
                    android:layout_marginTop="8dp"
                    android:height="48dp"
                    android:textSize="21sp"
                    android:text="@string/opprett_bruker"
                    android:paddingVertical="6dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>