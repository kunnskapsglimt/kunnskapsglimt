<?xml version="1.0" encoding="utf-8"?>
<!-- Brukes som spinner i prestasjoner -->
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardElevation="5dp"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="6dp"
    android:id="@+id/prestasjon_kort"
    app:cardBackgroundColor="@color/bla_lys"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/prestasjon_symbol"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_margin="6dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/bilde_fugl"
            android:contentDescription="@string/bilder" />

        <ProgressBar
            android:id="@+id/prestasjon_progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginVertical="6dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="6dp"
            android:min="0"
            android:max="100"
            android:progress="10"
            android:progressDrawable="@drawable/fremdrift_bla"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/prestasjon_symbol"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/prestasjon_level"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="@string/start"
            app:cornerRadius="10dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:fontFamily="@font/aclonica"
            android:padding="10dp"
            android:textSize="21sp"
            android:elevation="10dp"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/hvit"
            android:backgroundTint="@color/blank"
            app:layout_constraintTop_toTopOf="@id/prestasjon_progress_bar"
            app:layout_constraintStart_toStartOf="@id/prestasjon_progress_bar"
            app:layout_constraintEnd_toEndOf="@id/prestasjon_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/prestasjon_progress_bar"
            app:drawableStartCompat="@drawable/level_demo"
            app:drawableEndCompat="@drawable/level_lett" />

        <TextView
            android:id="@+id/prestasjon_poeng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="0dp"
            android:textColor="@color/bla_mork"
            android:textSize="17sp"
            app:layout_constraintTop_toBottomOf="@+id/prestasjon_progress_bar"
            app:layout_constraintBottom_toBottomOf="@id/prestasjon_symbol"
            app:layout_constraintStart_toStartOf="@id/prestasjon_progress_bar"
            app:layout_constraintEnd_toEndOf="@id/prestasjon_progress_bar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>