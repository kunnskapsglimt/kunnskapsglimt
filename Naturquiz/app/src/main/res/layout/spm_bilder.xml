<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bilde_bakgrunn"
        android:background="@drawable/gradient_bla"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Spm_bilder">

        <TextView
            android:id="@+id/bilde_tittel"
            style="@style/title"
            android:text="@string/hvilken_fugl"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/bilde_bilde"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:elevation="3dp"
            android:contentDescription="@string/bilder"
            app:layout_constraintTop_toBottomOf="@+id/bilde_tittel"
            app:layout_constraintBottom_toTopOf="@id/bilde_alternativ_nr1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ProgressBar
            android:id="@+id/bilde_venter"
            style="?android:attr/progressBarStyleLarge"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/bilde_bilde"
            app:layout_constraintBottom_toBottomOf="@id/bilde_bilde"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/bilde_mangler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:elevation="12dp"
            app:layout_constraintTop_toTopOf="@id/bilde_bilde"
            app:layout_constraintBottom_toBottomOf="@id/bilde_bilde"
            android:textColor="@color/svart"
            android:textSize="25sp"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/bilde_cc"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="@id/bilde_bilde"
            app:layout_constraintBottom_toBottomOf="@+id/bilde_bilde"
            android:elevation="5dp"
            android:src="@drawable/symbol_cc"
            android:contentDescription="@string/copyright" />

        <!-- Copyright info -->
        <LinearLayout
            android:id="@+id/bilde_cc_lag"
            android:visibility="gone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bakgrunn_kant"
            android:elevation="15dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/tekst"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/eier" />

                <TextView
                    android:id="@+id/bilde_cc_eier"
                    style="@style/tekst"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:layout_marginStart="0dp" />

                <ImageView
                    android:id="@+id/bilde_cc_lukk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:contentDescription="@string/lukk"
                    android:src="@drawable/symbol_lukk" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/tekst"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:text="@string/lisens" />

                <TextView
                    android:id="@+id/bilde_cc_lisens"
                    style="@style/tekst"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:gravity="start"
                    android:layout_marginStart="0dp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/bilde_cc_lenke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="@string/lenke"
                android:src="@drawable/symbol_lenke"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cc_lisens" />

        </LinearLayout>

        <ImageView
            android:id="@+id/bilde_internett"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="0dp"
            android:layout_margin="6dp"
            app:layout_constraintTop_toBottomOf="@+id/bilde_tittel"
            app:layout_constraintBottom_toTopOf="@id/bilde_alternativ_nr1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/mangler_internet"
            android:contentDescription="@string/mangler_internett" />

        <TextView
            android:id="@+id/bilde_alternativ_nr1"
            style="@style/tekst_knapp"
            android:textStyle="bold"
            android:contentDescription="@string/alternativ_nr1"
            app:layout_constraintBottom_toTopOf="@id/bilde_alternativ_nr2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/bilde_alternativ_nr2"
            style="@style/tekst_knapp"
            android:textStyle="bold"
            android:contentDescription="@string/alternativ_nr2"
            app:layout_constraintBottom_toTopOf="@id/bilde_alternativ_nr3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/bilde_alternativ_nr3"
            style="@style/tekst_knapp"
            android:textStyle="bold"
            android:contentDescription="@string/alternativ_nr3"
            app:layout_constraintBottom_toTopOf="@id/bilde_alternativ_nr4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/bilde_alternativ_nr4"
            style="@style/tekst_knapp"
            android:textStyle="bold"
            android:contentDescription="@string/alternativ_nr4"
            app:layout_constraintBottom_toTopOf="@id/bilde_type"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/bilde_poeng"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/bla_mork"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bilde_antall"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/bla_mork"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/bilde_type"
            android:elevation="1dp"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginTop="-10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/bilde_poeng"
            app:srcCompat="@drawable/fugl"
            android:contentDescription="@string/type" />

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/bilde_stor"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:background="@drawable/gradient_bla"
            android:elevation="10dp"
            android:padding="16dp"
            android:contentDescription="@string/klikk_forminske"/>

        <ImageView
            android:id="@+id/bilde_stor_cc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="12dp"
            android:src="@drawable/symbol_cc"
            android:contentDescription="@string/copyright" />

        <ImageView
            android:id="@+id/bilde_hjelp_finger"
            android:visibility="invisible"
            app:srcCompat="@drawable/hjelp_finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/bilde_bilde"
            app:layout_constraintBottom_toBottomOf="@+id/bilde_bilde"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="120dp"
            android:elevation="15dp"
            android:contentDescription="@string/help" />

        <TextView
            android:id="@+id/bilde_hjelp_tekst"
            android:visibility="invisible"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@+id/bilde_hjelp_finger"
            app:layout_constraintStart_toStartOf="@+id/bilde_hjelp_finger"
            android:textSize="22sp"
            android:gravity="center"
            android:background="@color/hvit"
            android:padding="10dp"
            android:elevation="14dp"
            android:textColor="@color/bla_mork"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>